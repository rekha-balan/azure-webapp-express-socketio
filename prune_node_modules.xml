<project name="prune_node_modules" default="prune_node_modules" basedir=".">
    
    <description>

        Chris Joakim, 2018/11/25
        $ ant -f prune_node_modules.xml
    </description>

    <target name="prune_node_modules">
        <delete>
            <fileset dir="node_modules" includes="**/*d.ts"/>
        </delete>

        <delete>
            <fileset dir="node_modules" includes="**/LICENSE*"/>
        </delete>

        <delete>
            <fileset dir="node_modules" includes="**/*.md"/>
        </delete>

        <delete>
            <fileset dir="node_modules" includes="**/*.txt"/>
        </delete>

        <delete>
            <fileset dir="node_modules" includes="**/test/*"/>
        </delete>

    </target>

</project>
